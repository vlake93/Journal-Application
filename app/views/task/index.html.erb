<h1>Task</h1>
<%= link_to "New task", new_user_category_task_path(tasks, @category) %>

  <div class="task-holder">
    <% tasks.each do |task| %>
      <div class="task-index">
    <div class="index">
      <h2><%= task.name %></h2>
      <h2><%= task.details %></h2>
      <h2><%= task.date %></h2>
    </div>
    <div class="buttons">
    <%= link_to "Edit", edit_user_category_task_path(current_user, @category, task) %>
    <%= link_to "Delete", delete_task_path(current_user, @category, task), class: "delete-task", data: { "turbo_method": "delete", "turbo_confirm": "Are you sure you want to delete this task? This can't be undone." } %>
    </div>
    </div>
    <% end %>
    </div>