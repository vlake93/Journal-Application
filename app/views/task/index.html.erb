<div class="task-header">
<h1><%= @category.name %></h1>
<div>
  <%= link_to image_tag("new.png"), new_user_category_task_path(tasks, @category) %>
  <%= link_to "Create new task", new_user_category_task_path(tasks, @category) %>
</div>
</div>

  <div class="task-holder">
    <% tasks.each do |task| %>
      <div class="task-index">
    <div class="index">
      <h2><%= task.name %></h2>
      <h2><%= task.details %></h2>
      <h2><%= task.date.strftime('%B %d, %Y')%></h2>
    </div>
    <div class="buttons">
    <%= link_to image_tag("edit.png"), edit_user_category_task_path(current_user, @category, task) %>
    <%= link_to image_tag("delete.png"), delete_task_path(current_user, @category, task), class: "delete-task", data: { "turbo_method": "delete", "turbo_confirm": "Are you sure you want to delete this task? This can't be undone." } %>
    </div>
    </div>
    <% end %>
    </div>z