<div class="categories">
  <div class="categories-header">
    <h1>Categories</h1>
    <%= link_to "New Category", new_user_category_path(current_user) %>
  </div>
  <div class="categories-holder">
  <% @category.each do |category| %>
    <div class="category">
      <h2><%= category.name %></h2>

      
      <%= link_to "Show category", show_category_path(current_user, category) %>
      <%= link_to "Edit category", edit_user_category_path(current_user, category) %>
      <%= link_to "Delete", class: "delete-category", method: :delete, data: { turbo_confirm: "Are you sure you want to delete this category? This can't be undone." } %>
    </div>
  <% end %>
  </div>
</div>
