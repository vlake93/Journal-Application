<div class="categories">
  <div class="categories-header">
    <h1>Categories</h1>
    <%= link_to "New Category", new_user_category_path(current_user) %>
  </div>
  <div class="categories-holder">
  <% @category.each do |category| %>
    <div class="category">
      <h2><%= category.name %></h2>
      <h2>Task: <%= category.tasks.count %></h2>
      
      <%= link_to "Show", show_category_path(current_user, category) %> |
      <%= link_to "Edit", edit_user_category_path(current_user, category) %> |
      <%= link_to "Delete", delete_category_path(current_user, category), class: "delete-category", data: { "turbo_method": "delete", "turbo_confirm": "Are you sure you want to delete this category? This can't be undone." } %>
    </div>
  <% end %>
  </div>
  
</div>

<div class="todays">
<% @category.each do |category| %>
  <h2><%= category.tasks.where('date = ?', Date.current).name %></h2>
  <% if category.tasks.first != nil %>
    <h2><%= category.tasks.first.name %></h2>
  <% end %>

    <% end %>
</div>